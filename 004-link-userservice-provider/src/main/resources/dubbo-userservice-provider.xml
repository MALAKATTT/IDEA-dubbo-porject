<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!--服务提供者申明名称，保证唯一性，作为dubbo内部使用的唯一标识-->
    <dubbo:application name="001-link-userservice-provider"/>

    <!--f访问服务名称以及u但口号，dubbo官方推荐使用是dubbo协议，端口号默认为20880-->
    <!--
        name:指定协议名称
        prot:指定协议端口号：20880
    -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!--
        暴露服务接口：dubbo:service
        interface:暴露服务接口的全限定类名
        ref:接口引用的实现类在spring容器中的标识
        registry:如果不是使用注册中心，则值为N/A
    -->
    <dubbo:service interface="com.thbpowernode.dubbo.service.UserService" ref="userService" registry="N/A"/>

    <!--
        将接口实现类加载到spring容器中
    -->
    <bean id="userService" class="com.thbpowernode.dubbo.service.impl.UserServiceImpl"/>

</beans>